{
  "name": "minesweeper",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/minesweeper.js",
      "require": "./lib/minesweeper.umd.js"
    }
  },
  "types": "./lib/minesweeper.d.ts",
  "scripts": {
    "dev": "tauri dev",
    "dev:frontend": "vite",
    "build": "tauri build",
    "build:frontend": "tsc && vite build",
    "build:tailwind": "npx tailwindcss -o lib/styles.css --minify",
    "build:lib": "rimraf lib && tsc && vite build --config vite.config.lib.ts && yarn build:tailwind",
    "build:types": "tsc --emitDeclarationOnly --outDir lib",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,mdx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx,mdx}\" --fix",
    "preview": "vite preview",
    "tauri": "tauri",
    "test:typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.0",
    "class-variance-authority": "^0.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0",
    "tauri-plugin-store-api": "https://github.com/tauri-apps/tauri-plugin-store#v1",
    "use-resize-observer": "^9.1.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "7.32.2",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.4.4",
    "vite-plugin-dts": "^3.6.3"
  }
